@page
@model videoscriptAI.Pages.User.ProfileModel
@{
    ViewData["Title"] = "User Profile";
}

<h1>User Profile</h1>

<div class="card">
    <div class="card-header">
        <h4>Profile Information</h4>
    </div>
    <div class="card-body">
        <form method="post">
            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label">Email</label>
                <input asp-for="Input.Email" class="form-control" readonly />
            </div>
            <div class="mb-3">
                <label asp-for="Input.FullName" class="form-label">Full Name</label>
                <input asp-for="Input.FullName" class="form-control" />
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.PhoneNumber" class="form-label">Phone Number</label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}