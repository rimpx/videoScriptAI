@page
@model videoscriptAI.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Video Script AI</h3>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <p>Benvenuto in VideoScript AI! Puoi:</p>
                        <ul>
                            <li>Caricare un file video (fino a 20MB)</li>
                            <li>Inserire un URL di YouTube</li>
                            <li>Continuare una chat precedente</li>
                        </ul>
                    </div>

                    <div class="mb-4">
                        <h4>Carica un Video</h4>
                        <form method="post" enctype="multipart/form-data" asp-page-handler="UploadVideo">
                            <div class="form-group">
                                <label for="videoFile">Seleziona un file video (MP4, AVI, etc.):</label>
                                <input type="file" class="form-control-file" id="videoFile" name="videoFile" accept="video/*">
                                <small class="form-text text-muted">Max 20MB. Per video più grandi, usa URL YouTube.</small>
                            </div>
                            <button type="submit" class="btn btn-primary mt-2">Carica Video</button>
                        </form>
                    </div>

                    <h4 class="mt-4">Oppure inserisci URL YouTube</h4>
                    <form method="post" asp-page-handler="ProcessYoutubeUrl">
                        <div class="form-group">
                            <label for="youtubeUrl">URL Video YouTube:</label>
                            <input type="url" class="form-control" id="youtubeUrl" name="youtubeUrl"
                                   placeholder="https://www.youtube.com/watch?v=...">
                        </div>
                        <button type="submit" class="btn btn-primary mt-2">Analizza Video</button>
                    </form>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger mt-4">
                    <strong>Errore:</strong> @Model.ErrorMessage
                </div>
            }
        </div>
    </div>
</div>